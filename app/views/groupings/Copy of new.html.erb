<%= form_tag questions_path do %>

	<div class="form-group">
		<%= %>
    </div>

	<% @question_group.each.with_index do |question, index| %>

  		<%= fields_for 'questions[]', question do |q| %> 
		  <div class="form-group">
		  	<%= q.label :question, ("Question " + (index + 1).to_s) %><br />
		  	<%= q.text_field :question, :size => 80 %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= q.label :correct_answer, "Correct Answer" %>
		  	<%= q.text_field :correct_answer %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= q.label :a2, "Incorrect Answer 1" %>
		  	<%= q.text_field :a2 %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= q.label :a3, "Incorrect Answer 2" %>
		  	<%= q.text_field :a3 %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= q.label :a4, "Incorrect Answer 3" %>
		  	<%= q.text_field :a4 %>
		  </div>

		<% end %>
  	<% end %>
  	<%= hidden_field_tag 'authenticity_token', form_authenticity_token %>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>