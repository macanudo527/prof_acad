<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2 class="left"><%= @grouping.name %></h2>
		<%= @grouping.description %></br>
		<div class="tags">
			<%= @grouping.tag_list %>
		</div>
	</div>
</div>
<hr>
<div class="row">
	<div class="col-md-8">
		<ul class="users">

			<% @grouping.questions.each_with_index do |question, index| %>
				<%= render partial: question, locals: {question: question, index: index, answerable: false} %>
			<% end %>

		</ul>

	</div>
</div>
<div class="row">	
	<div class="col-md-8">
		<%= link_to "Add a new question", new_question_path(:question => { :grouping_id => @grouping.id } ) %>
	</div>
</div>


<%= link_to 'Edit', edit_grouping_path(@grouping) %> |
<%= link_to 'Back', groupings_path %>