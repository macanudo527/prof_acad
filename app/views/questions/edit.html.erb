		  <div class="form-group answer-margin">
		  	<%= ff.label :correct_answer, "Correct Answer" %>
		  	<%= ff.text_field :correct_answer %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= ff.label :a2, "Incorrect Answer 1" %>
		  	<%= ff.text_field :a2 %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= ff.label :a3, "Incorrect Answer 2" %>
		  	<%= ff.text_field :a3 %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= ff.label :a4, "Incorrect Answer 3" %>
		  	<%= ff.text_field :a4 %>
		  </div>
		  
		  <div class="actions">
    		<%= submit_tag %>
  		</div>	
		
		<% end %>