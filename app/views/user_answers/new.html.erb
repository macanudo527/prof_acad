<%= form_for([@question, @user_answer]) do |f| %>


<% answers = answer_shuffler(@question, @user_answer.answer_seq) %>



  <% if @user_answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @user_answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="form-group">
		<%= f.label :question, @question.question %>
    </div>
    
 	<div class="form-group">
		<%= f.radio_button :answer, '0' %>
		<%= f.label :answer, answers[0], :value => '0' %>
    </div>  
    
    <div class="form-group">
		<%= f.radio_button :answer, '1' %>
		<%= f.label :answer, answers[1], :value => '1' %>
    </div>
    
    <div class="form-group">
		<%= f.radio_button :answer, '2' %>
		<%= f.label :answer, answers[2], :value => '2' %>
    </div>
    
    <div class="form-group">
		<%= f.radio_button :answer, '3' %>
		<%= f.label :answer, answers[3], :value => '3' %>
    </div>   
    
    <%= f.hidden_field :id, :value => @user_answer.id %>
    




  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
