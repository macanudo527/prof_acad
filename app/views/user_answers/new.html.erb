<%= form_for(setup_grouping @grouping) do |f| %>

  <% if @grouping.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@grouping.errors.count, "error") %> prohibited this grouping from being saved:</h2>

      <ul>
      <% @grouping.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
    </div>


	  <%= f.fields_for :questions do |ff| %>
		<div class="form-group">
		  <%= ff.label :question, ("Question " + (ff.index + 1).to_s) %></br>
		  <%= ff.text_field :question, :size => 80  %>
				
		<% if ff.object.persisted? %>
		  <%= ff.check_box :_destroy %>
		  <%= ff.label :_destroy, "Destroy" %>
		<% end %>	
		</div>
		
		  <div class="form-group answer-margin">
		  	<%= ff.label :correct_answer, "Correct Answer" %>
		  	<%= ff.text_field :correct_answer %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= ff.label :a2, "Incorrect Answer 1" %>
		  	<%= ff.text_field :a2 %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= ff.label :a3, "Incorrect Answer 2" %>
		  	<%= ff.text_field :a3 %>
		  </div>
		  
		  <div class="form-group answer-margin">
		  	<%= ff.label :a4, "Incorrect Answer 3" %>
		  	<%= ff.text_field :a4 %>
		  </div>	
		
		<% end %>


  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
