<%= form_for([@question, @user_answer]) do |f| %>

  <% if @user_answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_answer.questions.user_answers.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @user_answer.questions.user_answers.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<%= f.fields_for @user_answer do |ff| %>

<% answers = answer_shuffler(@question, ff.object.answer_seq)%>

	<div class="form-group">
		<%= ff.label :question, @question.question %>
    </div>
    
 	<div class="form-group">
		<%= ff.radio_button :answer, '0' %>
		<%= ff.label :answer, answers[0], :value => '0' %>
    </div>  
    
    <div class="form-group">
		<%= ff.radio_button :answer, '1' %>
		<%= ff.label :answer, answers[1], :value => '1' %>
    </div>
    
    <div class="form-group">
		<%= ff.radio_button :answer, '2' %>
		<%= ff.label :answer, answers[2], :value => '2' %>
    </div>
    
    <div class="form-group">
		<%= ff.radio_button :answer, '3' %>
		<%= ff.label :answer, answers[3], :value => '3' %>
    </div>   
    
    <% end %>
    




  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
